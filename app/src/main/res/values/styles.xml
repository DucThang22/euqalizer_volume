<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="H6">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="lineSpacing">23dp</item>
    </style>

    <style name="BottomSheetDialogThemeBase" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleBase</item>
    </style>

    <style name="BottomSheetStyleBase" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="button_style_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_button_normal</item>
    </style>

    <style name="cta_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_cta_button</item>
    </style>

    <style name="body_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="h2_highlight_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/app_font_bold</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabText">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CenteredTabLayout" parent="CenteredTabLayout.TabLayout">
        <item name="tabMinWidth">190dp</item>
        <item name="tabTextAppearance">@style/H5</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="CenteredTabLayout.TabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="tabIndicatorColor">?colorPrimary</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="H5">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">700</item>
        <item name="lineSpacing">24dp</item>
    </style>

    <style name="Widget.HahaloloFake.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.HahaloloFake.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="singleLine">true</item>
    </style>

</resources>